	"battery": {
		"bat": "BAT1",
		"interval": 15,
		"states": {
			"warning": 30,
			"critical": 15
		},
		"format-time": "{H}:{m} h",
		"format-charging": "ïƒ§ {capacity}%\n{time}",
		"format-full": "ï‰€\n{capacity}%",
